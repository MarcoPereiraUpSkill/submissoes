<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane onKeyReleased="#teclaPressionadaAction" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.upskill.listatarefas.ui.JanelaPrincipalSceneUI">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Ficheiros">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#mnuGuardarComoTexto" text="Guardar como texto" />
                  <MenuItem mnemonicParsing="false" onAction="#mnuSerializacao" text="Serialização" />
                  <MenuItem mnemonicParsing="false" onAction="#mnuDesserializacao" text="Desserialização" />
                  <MenuItem mnemonicParsing="false" onAction="#mnuSair" text="Sair" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Tarefa">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#mnuAdicionarTarefa" text="Adicionar" />
                  <Menu mnemonicParsing="false" text="Remover">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#mnuRemoverSelecionada" text="Selecionada" />
                        <MenuItem mnemonicParsing="false" onAction="#mnuRemoverTodas" text="Todas" />
                    </items>
                  </Menu>
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <ListView fx:id="txtAreaTarefas" prefHeight="250.0" prefWidth="466.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
